input {
  redis {
    host => "127.0.0.1"
    type => "redis-input"
    # these settings should match the output of the agent
    data_type => "list"
    key => "logstash"

    # We use json_event here since the sender is a logstash agent
    format => "json_event"
  }
}



output {
  elasticsearch {
    host => "127.0.0.1"
  }
<% if @enable_mqtt -%>
  mqtt {
    host => <%= @mqtt_host %>
    port => <%= @mqtt_port %>
    topic => <%= @mqtt_topic %>
    ssl => true
<% if  @mqtt_certfile_contents -%>
    cert_file => "/etc/logstash/mqtt_cert.pem.crt"
<% end -%>
<% if @mqtt_key_file_contents -%>
    key_file => "/etc/logstash/mqtt_private.pem.key"
<% end -%>
    ca_file => "/etc/logastash/mqtt-root-CA.crt"
  }
<% end -%>
}
